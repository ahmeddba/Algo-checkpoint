Algorithm nbr_char
VAR
counter:integer:=1;
i:integer;
user_input:string;
BEGIN
REPEAT
    write('Donner une phrase');
    read('user_input');
UNTIL (length(user_input) <> 0 AND user_input[0] <> " ")

FOR i FROM 0 TO length(user_input)-1 STEP step  DO
IF (user_input[i] := "a" OR user_input[i] := "e" OR user_input[i] := "u" OR user_input[i] := "i" OR user_input[i] := "o" ) THEN
    counter := counter+1;
END_IF
END_FOR
write("Number of vowels in your sentence equals to: "& counter );
END
